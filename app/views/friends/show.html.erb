<div class="jumbotron">
    <h1 class="display-4">
      <%= @friend.first_name%>
      <%= @friend.last_name%>
    </h1>
  <p class="lead">     
    <%= @friend.email%>
  </p>
  <p class="lead">     
    <%= @friend.phone%>
  </p>
